{
  "name": "bono",
  "version": "1.1.1",
  "description": "Bono is light and modular Node.js web application framework",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit",
    "lint": "eslint .",
    "test:unit": "mocha test/**",
    "test:coverage": "nyc --check-coverage --reporter=html --reporter=text mocha test/**"
  },
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "co-body": "^6.0.0",
    "koa": "^2.11.0",
    "koa-compose": "^4.1.0",
    "qs": "^6.9.1"
  },
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-xinix": "^1.1.14",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.3",
    "mocha": "^10.2.0",
    "nyc": "^15.0.0",
    "supertest": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/xinix-technology/node-bono.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  }
}
